<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="result"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/percent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:freezesText="true"/>


    <Button
        android:id="@+id/clear"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/eight"
        app:layout_constraintLeft_toLeftOf="@+id/seven"
        app:layout_constraintRight_toRightOf="@+id/eight"
        android:onClick="onOperationClinic"/>

    <Button
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/clear"
        app:layout_constraintLeft_toRightOf="@+id/clear"
        app:layout_constraintTop_toTopOf="@+id/clear"
        android:onClick="onOperationClinic"/>

    <Button
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/eight"
        app:layout_constraintRight_toLeftOf="@+id/eight"
        app:layout_constraintTop_toTopOf="@+id/eight"
        android:onClick="onNumberClinic"/>

    <Button
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/five"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/five"
        app:layout_constraintRight_toRightOf="@+id/five"
        android:onClick="onNumberClinic"/>

    <Button
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/eight"
        app:layout_constraintLeft_toRightOf="@+id/eight"
        app:layout_constraintTop_toTopOf="@+id/eight"
        android:onClick="onNumberClinic"/>

    <Button
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/five"
        app:layout_constraintRight_toLeftOf="@+id/five"
        app:layout_constraintTop_toTopOf="@+id/five"
        android:onClick="onNumberClinic"/>

    <Button
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/two"
        app:layout_constraintLeft_toRightOf="@+id/four"
        android:onClick="onNumberClinic"/>

    <Button
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/five"
        app:layout_constraintLeft_toRightOf="@+id/five"
        app:layout_constraintTop_toTopOf="@+id/five"
        android:onClick="onNumberClinic"/>

    <Button
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/two"
        app:layout_constraintRight_toLeftOf="@+id/two"
        app:layout_constraintTop_toTopOf="@+id/two"
        android:onClick="onNumberClinic"/>

    <Button
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/zero"
        app:layout_constraintLeft_toLeftOf="@+id/five"
        app:layout_constraintRight_toRightOf="@+id/five"
        android:onClick="onNumberClinic"/>

    <Button
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/two"
        app:layout_constraintLeft_toRightOf="@+id/two"
        app:layout_constraintTop_toTopOf="@+id/two"
        android:onClick="onNumberClinic"/>

    <Button
        android:id="@+id/zero"
        android:layout_width="175sp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/one"
        app:layout_constraintRight_toRightOf="@+id/two"
        android:onClick="onNumberClinic"/>

    <Button
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/zero"
        app:layout_constraintLeft_toRightOf="@+id/zero"
        app:layout_constraintTop_toTopOf="@+id/zero"
        android:onClick="onOperationClinic"/>

    <Button
        android:id="@+id/divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/percent"
        app:layout_constraintLeft_toRightOf="@+id/percent"
        app:layout_constraintTop_toTopOf="@+id/percent"
        android:onClick="onOperationClinic" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/nine"
        app:layout_constraintLeft_toRightOf="@+id/nine"
        app:layout_constraintTop_toTopOf="@+id/nine"
        android:onClick="onOperationClinic"/>


    <Button
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/six"
        app:layout_constraintLeft_toRightOf="@+id/six"
        app:layout_constraintTop_toTopOf="@+id/six"
        android:onClick="onOperationClinic"/>

    <Button
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/dot"
        app:layout_constraintLeft_toRightOf="@+id/dot"
        app:layout_constraintTop_toTopOf="@+id/dot"
        android:onClick="onOperationClinic"/>

    <Button
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/three"
        app:layout_constraintLeft_toRightOf="@+id/three"
        app:layout_constraintTop_toTopOf="@+id/three"
        android:onClick="onOperationClinic"/>
</androidx.constraintlayout.widget.ConstraintLayout>